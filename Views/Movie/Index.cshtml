@* @model List<YourNamespace.Models.Movie> *@
@model List<Moive_finder.Models.Movie>
<h1>Movies</h1>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">

                Category List
            </h2>
    </div>
    <div class="col-6 text-end">
            <a asp-controller="Movie" asp-action="Add" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Movie</a>
    </div>

</div>
    
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Display Order
            </th>
            <th>
                Category Name
            </th>
            <th>
                Genre
            </th>
            <th></th>
        
        </tr>
    </thead>

    @foreach( var obj in Model)
    {
        <tr>

            <td>@obj.DisplayOrder</td>
            <td>@obj.Name</td>
            <td>@obj.Genre</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Movie" asp-action="Edit"  asp-route-id="@obj.Id" class="btn btn-primamry mx-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </td>
         
        </tr>
    }


</table>
