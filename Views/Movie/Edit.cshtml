@model Movie;

<form method="post">
    <div class="border p-3 mt-4 ">
        <div class="row pb-2">
            <h2 class="text-primary">Edit List</h2>
            <hr />
        </div>
        <div class="mb-3" row>
            <label asp-for="DisplayOrder">Display Order></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="mb-3" row>
            <label asp-for="Name">Movie Name></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3" row>
            <label asp-for="Genre">Genre</label>
            <input asp-for="Genre" type="text" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>

        </div>
        <div>
            <button type="submit" class="btn btn-primary" sty;archive="width:150px">Update</button>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
        </div>
    </div>
</form>

@*ASP-validation summary all *@
@section Scripts {

    @{

        <partial name="_ValidationScriptsPartial" />
    }
}
